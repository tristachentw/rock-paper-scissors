@import './reset.styl';

body
  size: 100vw 100vh
  color: #fff
  background: #333

.status-button
  absolute: left 0 right 0 bottom 10vh
  size: 150px
  margin: auto
  border-radius: 100%
  font-size: 2rem
  background-color: #4caf50
  &:active
    background-color: #388e3c

.start .status-button
  background-color: #9c27b0
  &:active
    background-color: #8e24aa

.end .status-button
  background-color: #ffeb3b
  &:active
    background-color: #fbc02d
