@import './reset.styl';

body
  size 100vw 100vh
  color: #fff
  background: #333

.button
  absolute: left 0 right 0 bottom 10vh
  margin: auto
  size: 150px
  border-radius: 100%
  font-size: 2rem
  background-color: #4caf50

  &:active
    background-color: #388e3c

  &.stop
    background-color: #9c27b0

    &:active
      background-color: #8e24aa
